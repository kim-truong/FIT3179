{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Life Expectancy",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/kim-truong/FIT3179/main/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kim-truong/FIT3179/main/lifeexpectancy.csv"
        },
        "key": "Country",
        "fields": ["LifeExpectancy", "AdultMortality", "InfantDeaths"]
      }
    },
    {"calculate": "datum.LifeExpectancy * 1", "as": "Life Expectancy"}
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape",
          "strokeWidth": 1},
  "encoding": {
    "color": {
      "field": "Life Expectancy",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [50, 55, 60, 65, 70, 75, 80],
        "range": ["bdbdbd", "#e0f3db", "ccebc5", "#a8ddb5", "#7bccc4", "#4eb3d3", "#2b8cbe", "084081"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Life Expectancy", "type": "quantitative", "format": ","},
      {"field": "AdultMortality", "type": "quantitative", "format": ","},
      {"field": "InfantDeaths", "type": "quantitative", "format": ","}
    ]
  },
  "config": {}
}
