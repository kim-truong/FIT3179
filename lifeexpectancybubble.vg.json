{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Life Expectancy against BMI",
  "data": {
    "url": "https://raw.githubusercontent.com/kim-truong/FIT3179/main/lifeexpectancywithcontinent.csv"
  },
  "params": [
    {
      "name": "LifeExpectancy",
      "value": 50,
      "bind": {
        "input": "range",
        "min": 50,
        "max": 100,
        "step": 10,
        "name": "Minimum Life Expectancy: "
      }
    },
    {
      "name": "Continent",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.InfantDeaths > 0"},
    {"filter": "datum.BMI > 0"},
    {"filter": "datum.LifeExpectancy > LifeExpectancy"},
    {
      "filter": "Continent == null || datum.Continent == Continent"
    }
  ],
  "encoding": {
    "x": {
      "field": "LifeExpectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [40, 90]}
    },
    "y": {
      "field": "BMI",
      "type": "quantitative",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [2, 80]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "BMI",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 20, 30, 40, 60, 65, 70],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "LifeExpectancy", "type": "quantitative", "format": ","},
          {"field": "AdultMortality", "type": "quantitative", "format": ","},
          {"field": "InfantDeaths", "type": "quantitative", "format": ","},
          {"field": "HepatitisB", "type": "quantitative", "format": ","},
          {"field": "BMI", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "LifeExpectancy", "type": "quantitative", "format": ","},
          {"field": "AdultMortality", "type": "quantitative", "format": ","},
          {"field": "InfantDeaths", "type": "quantitative", "format": ","},
          {"field": "HepatitisB", "type": "quantitative", "format": ","},
          {"field": "BMI", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
